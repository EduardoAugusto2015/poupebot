<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.megaapps.mepoupe.View.HomeFragmentContent"
    tools:ignore="NewApi">

    <RelativeLayout
        android:id="@+id/layHeader"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/accent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/txtTittle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/home"
                android:textAlignment="center"
                android:textColor="@color/light"
                android:textSize="20sp" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/layHeader"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/frTop"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentTop="true">

            <TextView
                android:id="@+id/txtBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="15dp"
                android:paddingLeft="25dp"
                android:text="@string/balance"
                android:textColor="@color/dark"
                android:textSize="21sp"
                tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/lay_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/frTop"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1"
                tools:ignore="UselessParent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/line"
                    tools:ignore="ContentDescription,RtlHardcoded" />

                <LinearLayout
                    android:id="@+id/lay_recipe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnBalance"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginLeft="61dp"
                        android:background="@drawable/circle_green"
                        tools:ignore="RtlHardcoded" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="@string/money"
                        android:textSize="@dimen/text_small"
                        tools:ignore="RtlHardcoded" />

                </LinearLayout>

                <TextView
                    android:id="@+id/txtMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="90dp"
                    android:layout_marginStart="90dp"
                    android:textColor="@color/green"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:maxWidth="200sp"
                    android:textSize="@dimen/text_large"
                    tools:ignore="HardcodedText" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginLeft="70dp"
                    android:background="@drawable/line"
                    tools:ignore="ContentDescription,RtlHardcoded" />

                <LinearLayout
                    android:id="@+id/lay_expense"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnExpense"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginLeft="61dp"
                        android:layout_marginStart="61dp"
                        android:background="@drawable/circle_red" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="@string/expense"
                        android:textSize="@dimen/text_small"
                        tools:ignore="RtlHardcoded" />
                </LinearLayout>

                <TextView
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:maxWidth="200sp"
                    android:id="@+id/txtExpense"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="90dp"
                    android:layout_marginStart="90dp"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_large"
                    tools:ignore="HardcodedText" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginStart="70dp"
                    android:background="@drawable/line"
                    tools:ignore="ContentDescription" />

                <LinearLayout
                    android:id="@+id/lay_swing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnSwing"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginLeft="61dp"
                        android:layout_marginStart="61dp"
                        android:background="@drawable/circle_blue" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginStart="5dp"
                        android:text="@string/balanceOfMonth"
                        android:textSize="@dimen/text_small" />
                </LinearLayout>

                <TextView
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:maxWidth="200sp"
                    android:id="@+id/txtSwing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="90dp"
                    android:layout_marginStart="90dp"
                    android:textColor="@color/dark"
                    android:textSize="@dimen/text_large"
                    tools:ignore="HardcodedText" />

            </LinearLayout>
        </LinearLayout>

        <com.getbase.floatingactionbutton.FloatingActionsMenu
            android:id="@+id/multiple_actions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            fab:fab_addButtonColorNormal="@color/accent"
            fab:fab_addButtonColorPressed="@color/light"
            fab:fab_addButtonPlusIconColor="@color/light"
            fab:fab_labelStyle="@style/menu_labels_style">

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/floatInputMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_colorNormal="@color/green"
                fab:fab_colorPressed="@color/light"
                fab:fab_icon="@drawable/ic_money"
                fab:fab_title="Receitas" />

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/floatExpense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_colorNormal="@color/red"
                fab:fab_colorPressed="@color/light"
                fab:fab_icon="@drawable/ic_wallet"
                fab:fab_title="Despesas" />

        </com.getbase.floatingactionbutton.FloatingActionsMenu>
    </RelativeLayout>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/layHeader"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/accent">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true">

                    <TextView
                        android:id="@+id/txtTittle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/pass"
                        android:textAlignment="center"
                        android:textColor="@color/light"
                        android:textSize="20sp" />
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/layAcpass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/button"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/age" />


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_acpass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/txtAcpass"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:hint="Senha atual"
                        android:inputType="textPassword"
                        android:paddingLeft="@dimen/lay_profile"
                        android:textColor="@color/text"
                        android:textSize="@dimen/text_profile" />
                </android.support.design.widget.TextInputLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/LayNewPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/key" />

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_newpass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/txtNewpass"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5dp"
                            android:hint="Confirmar senha"
                            android:inputType="textPassword"
                            android:paddingLeft="@dimen/lay_profile"
                            android:textColor="@color/text"
                            android:textSize="@dimen/text_profile" />
                    </android.support.design.widget.TextInputLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/LayPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/key" />



                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_pass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/txtPass"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5dp"
                            android:hint="Nova senha"
                            android:inputType="textPassword"
                            android:paddingLeft="@dimen/lay_profile"
                            android:textColor="@color/text"
                            android:textSize="@dimen/text_profile" />
                    </android.support.design.widget.TextInputLayout>


            </LinearLayout>


            <RelativeLayout
                android:id="@+id/RelUpdate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="0.91"
                android:paddingBottom="30dp">

                <Button
                    android:id="@+id/btnSave"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/button"
                    android:text="@string/save"
                    android:textColor="@color/light"
                    android:textSize="@dimen/text_button" />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>

